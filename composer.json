{
  "name": "prom-cms/core",
  "description": "Core for PromCMS",
  "license": "MIT",
  "authors": [
    {
      "name": "OndÅ™ej Langr",
      "email": "hi@ondrejlangr.cz"
    }
  ],
  "autoload": {
    "psr-4": {
      "PromCMS\\Core\\": "src/",
      "PromCMS\\Cli\\": "cli/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PromCMS\\Tests\\": "tests/"
    }
  },
  "bin": [
    "bin/prom-cms"
  ],
  "require": {
    "php": ">=8.0",
    "slim/slim": "4.*",
    "guzzlehttp/psr7": "^2",
    "guzzlehttp/guzzle": "^7.4",
    "php-di/php-di": "^7",
    "rakibtg/sleekdb": "^2.13",
    "bryanjhv/slim-session": "^4.0",
    "monolog/monolog": "^3.5",
    "league/flysystem": "^3.15",
    "firebase/php-jwt": "^6.8",
    "paragonie/sodium_compat": "^1.17",
    "phpmailer/phpmailer": "^6.6",
    "slim/twig-view": "^3.3",
    "twig/html-extra": "^3.7",
    "justinrainbow/json-schema": "^5.2",
    "slim/psr7": "^1.6",
    "doctrine/orm": "^2.11.0",
    "doctrine/dbal": "^3.2",
    "symfony/filesystem": "^5.0",
    "symfony/finder": "^5.0",
    "symfony/dotenv": "^6",
    "symfony/yaml": "^5.4",
    "symfony/cache": "^5.4"
  },
  "require-dev": {
    "symfony/console": "^6",
    "spatie/phpunit-watcher": "^1.8",
    "phpunit/phpunit": "^10",
    "fakerphp/faker": "^1.23"
  },
  "scripts": {
    "test": [
      "Composer\\Config::disableProcessTimeout",
      "phpunit --testdox --stop-on-failure tests"
    ],
    "database:migrate": "composer run cli orm:schema-tool:update",
    "cli": ["bin/prom-cms"]
  }
}
