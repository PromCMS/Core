    "phpmailer/phpmailer": "^6.6",
    "twig/twig": "^3.0",
    "symfony/dotenv": "^5.4",
    "illuminate/support": "^8.83"
  },
  "require-dev": {
    "fakerphp/faker": "^1.9.1",
    "mockery/mockery": "^1.3.1",
    "spatie/phpunit-watcher": "^1.8",
