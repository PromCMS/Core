{
  "name": "prom-cms/core",
  "description": "Core for PromCMS",
  "license": "MIT",
  "authors": [
    {
      "name": "OndÅ™ej Langr",
      "email": "hi@ondrejlangr.cz"
    }
  ],
  "autoload": {
    "psr-4": {
      "PromCMS\\Core\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PromCMS\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.0",
    "slim/slim": "4.*",
    "guzzlehttp/psr7": "^2",
    "guzzlehttp/guzzle": "^7.4",
    "php-di/php-di": "^7",
    "rakibtg/sleekdb": "^2.13",
    "bryanjhv/slim-session": "^4.0",
    "symfony/filesystem": "^5.0",
    "league/flysystem": "^3.15",
    "firebase/php-jwt": "^6.8",
    "paragonie/sodium_compat": "^1.17",
    "phpmailer/phpmailer": "^6.6",
    "symfony/dotenv": "^6",
     "propel/propel": "~2.0@beta",
    "illuminate/support": "^10.21",
    "slim/twig-view": "^3.3",
    "twig/html-extra": "^3.7",
    "prom-cms/propel-model-behavior": "dev-develop",
    "justinrainbow/json-schema": "^5.2",
    "slim/psr7": "^1.6"
  },
  "require-dev": {
    "spatie/phpunit-watcher": "^1.8",
    "phpunit/phpunit": "^10",
    "fakerphp/faker": "^1.23"
  },
  "scripts": {
    "test": [
      "composer run database:migrate",
      "Composer\\Config::disableProcessTimeout",
      "phpunit --testdox --stop-on-failure tests"
    ],
    "post-install-cmd": ["composer run propel:sync"],
    "propel:sync": ["composer run build:propel", "composer run database:migrate"],
    "build:propel": ["vendor/bin/propel model:build --config-dir=\"./propel\"", "vendor/bin/propel config:convert --config-dir=\"./propel\""],
    "database:migrate": ["vendor/bin/propel sql:build --config-dir=\"./propel\"", "vendor/bin/propel sql:insert --config-dir=\"./propel\""]
  }
}
